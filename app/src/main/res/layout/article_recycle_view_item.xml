<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/minimal_article_item"
    android:padding="15dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        app:shapeAppearanceOverlay="@style/oval"
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:clipToOutline="true"
        android:shape="oval"
        android:src="@color/primaryThemeColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </com.google.android.material.imageview.ShapeableImageView>

    <TextView
        android:layout_marginTop="5dp"
        android:id="@+id/article_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:text="Nhiều tranh cãi chờ tòa phán quyết trong vụ án Trương Mỹ Lan"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView">

    </TextView>

    <TextView
        android:id="@+id/article_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:textColor="@color/primaryTextColor"
        android:fontFamily="sans-serif"
        android:maxLines="3"
        android:text="Gần 1 tháng TAND TP.HCM xét xử sơ thẩm vụ án Trương Mỹ Lan - Vạn Thịnh Phát, nhiều nội dung tranh luận giữa Viện KSND TP.HCM (Viện kiểm sát) và luật sư về tội danh, thiệt hại, vai trò đồng phạm giúp sức nhưng chưa thống nhất quan điểm. HĐXX đang nghị án."
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/article_title">

    </TextView>

    <LinearLayout
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/article_description">
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp">

            <!-- ImageView để hiển thị hình ảnh -->
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/author_image"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:background="@drawable/oval"
                android:scaleType="centerCrop"
                android:src="@drawable/ava" />

            <!-- Shape Drawable để tạo hình tròn -->
<!--            <ImageView-->
<!--                android:layout_width="34dp"-->
<!--                android:layout_height="34dp"-->
<!--                android:background="@drawable/oval" />-->
        </FrameLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/author_name"
                android:text="Lê Quốc Minh"
                android:textStyle="bold"
                android:textSize="12sp"
                android:layout_gravity="top"
                android:textColor="@color/primaryTextColor"
                android:layout_width="wrap_content"
                android:layout_height="14dp"/>
            <TextView
                android:id="@+id/subscriber_count"
                android:text="26N người theo dõi"
                android:textColor="@color/primaryTextColor"
                android:textSize="9sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>


        <TextView
            android:id="@+id/post_time"
            android:text="1 giờ trước"
            android:paddingLeft="9dp"
            android:textSize="11sp"
            android:textColor="@color/primaryTextColor"
            android:layout_weight="1.3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/view_count"
            android:text="2234"
            android:textSize="10sp"
            android:textColor="@color/primaryTextColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_width="18dp"
            android:layout_height="12dp"
            android:scaleType="centerCrop"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="3dp"
            android:src="@drawable/ic_view"
            app:tint="@color/primaryTextColor" />
        <TextView
            android:id="@+id/comment_count"
            android:text="2234"
            android:layout_width="wrap_content"
            android:textSize="10sp"
            android:textColor="@color/primaryTextColor"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginLeft="4dp"
            android:scaleType="centerCrop"

            android:src="@drawable/ic_comment"
            app:tint="@color/primaryTextColor" />


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/white"
    android:background="@color/white"
    tools:context=".activity.PostArticleActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/toolbar_bg"
        android:paddingStart="0dp"
        android:paddingEnd="18dp"
        android:paddingBottom="0dp"
        android:elevation="4dp"
        android:translationZ="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="17dp">

            <ImageButton
                android:id="@+id/btnCancel"
                android:layout_width="26dp"
                android:layout_height="24dp"
                android:background="@null"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_close"
                android:text=""
                app:tint="@color/primaryTextColor" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="27dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/t_o_b_i_vi_t"
                android:textColor="@color/primaryTextColor"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/btnPost"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:src="@drawable/ic_search_button"
                android:text="@string/ng"
                android:textColor="@color/primaryThemeColor"
                android:textSize="15sp"
                android:textStyle="bold"
                app:tint="@color/primaryTextColor" />

        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>

            <!-- Your RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvBodyItems"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tool_bar"
         />




        <!-- Fixed Buttons -->


<!--    <androidx.recyclerview.widget.RecyclerView-->
<!--        android:id="@+id/rvBodyItems"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="0dp"-->
<!--        android:paddingStart="10dp"-->
<!--        android:paddingEnd="10dp"-->
<!--        app:layout_constraintEnd_toEndOf="parent"-->
<!--        app:layout_constraintStart_toStartOf="parent"-->
<!--        app:layout_constraintTop_toBottomOf="@+id/scrollView2" />-->
    <ImageButton
        android:id="@+id/btnGoUp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="fitCenter"
        android:layout_margin="16dp"
        android:background="@drawable/btn_bg"
        android:padding="14dp"
        android:backgroundTint="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/btnAddItem"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_go_up"
        app:tint="@color/primaryTextColor"
        android:elevation="2dp"
        android:translationZ="2dp" />

    <ImageButton
        android:id="@+id/btnAddItem"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="16dp"
        android:backgroundTint="@color/white"
        android:scaleType="centerCrop"
        android:background="@drawable/btn_bg"
        android:padding="14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:elevation="2dp"
        android:translationZ="2dp"
        app:srcCompat="@drawable/ic_plus"
        app:tint="@color/primaryTextColor" />
</androidx.constraintlayout.widget.ConstraintLayout>

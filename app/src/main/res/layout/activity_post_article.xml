<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/white"
    android:background="@color/white"
    tools:context=".activity.PostArticleActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/toolbar_bg"
        android:paddingStart="0dp"
        android:paddingEnd="18dp"
        android:paddingBottom="0dp"
        android:elevation="4dp"
        android:translationZ="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="17dp">

            <ImageButton
                android:id="@+id/btnCancel"
                android:layout_width="26dp"
                android:layout_height="24dp"
                android:background="@null"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_close"
                android:text=""
                app:tint="@color/primaryTextColor" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="27dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/t_o_b_i_vi_t"
                android:textColor="@color/primaryTextColor"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/btnPost"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:src="@drawable/ic_search_button"
                android:text="@string/ng"
                android:textColor="@color/primaryThemeColor"
                android:textSize="15sp"
                android:textStyle="bold"
                app:tint="@color/primaryTextColor" />

        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tool_bar">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/linearLayout6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="30dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/csUserInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@+id/linearLayout6"
                tools:layout_editor_absoluteX="10dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/imgAvar"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:shapeAppearance="@style/circular_50"
                    tools:srcCompat="@tools:sample/avatars" />

                <LinearLayout
                    android:id="@+id/linearLayout4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/imgAvar"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/txtUserName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_weight="1"
                        android:text="Nguyen Duy Khanh"
                        android:textColor="@color/primaryTextColor"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtFollower"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_weight="1"
                        android:background="#D2EAFF"
                        android:text="Công khai"
                        android:textColor="#303F91"
                        android:textSize="13sp" />

                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/edtTitleLayout"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/black"
                app:boxBackgroundMode="outline"
                app:boxStrokeColor="@color/black"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="1dp"
                app:counterTextColor="@color/black"
                app:hintEnabled="true"
                app:hintTextColor="@color/black"
                app:layout_constraintTop_toBottomOf="@+id/csUserInfo"
                app:placeholderTextColor="@color/black"
                app:prefixTextColor="@color/black"
                app:errorIconDrawable="@null"
                app:startIconTint="@color/black"
                app:suffixTextColor="@color/black"
                tools:layout_editor_absoluteX="10dp">

                <EditText
                    android:id="@+id/edtTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="top|start"
                    android:hint="@string/ti_u_b_i_b_o"
                    android:inputType="textMultiLine|textCapSentences"
                    android:minLines="1"
                    android:paddingTop="4dp"
                    android:paddingBottom="3dp"
                    android:textColor="@color/black"
                    android:textCursorDrawable="@drawable/custom_cursor"
                    android:textSize="30sp"
                    android:textStyle="bold" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/edtDescriptionLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/primaryTextColor"
                app:boxBackgroundMode="outline"
                app:boxStrokeColor="@color/primaryTextColor"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="1dp"
                app:counterTextColor="@color/primaryTextColor"
                app:hintEnabled="true"
                app:hintTextColor="@color/primaryTextColor"
                app:layout_constraintTop_toBottomOf="@+id/edtTitleLayout"
                app:placeholderTextColor="@color/primaryTextColor"
                app:prefixTextColor="@color/primaryTextColor"
                android:layout_marginTop="2dp"
                app:errorIconDrawable="@null"
                app:startIconTint="@color/primaryTextColor"
                app:suffixTextColor="@color/primaryTextColor"
                tools:layout_editor_absoluteX="10dp">

                <EditText
                    android:id="@+id/edtDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="top|start"
                    android:hint="@string/m_t_ng_n"
                    android:inputType="textMultiLine|textCapSentences"
                    android:minLines="1"
                    android:paddingTop="6dp"
                    android:paddingBottom="3dp"
                    android:textColor="@color/primaryTextColor"
                    android:textCursorDrawable="@drawable/custom_cursor"
                    android:textSize="19sp"
                    android:textStyle="bold" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/tvThumbnail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="14dp"
                android:text="Thumbnail"
                android:textColor="@color/primaryTextColor"
                android:textSize="13dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edtDescriptionLayout">

            </TextView>

            <androidx.cardview.widget.CardView
                android:id="@+id/edtThumbnailLayout"
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:layout_gravity="center"
                app:cardCornerRadius="12dp"
                app:layout_constraintTop_toBottomOf="@+id/tvThumbnail"
                tools:layout_editor_absoluteX="10dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/edtThumbnail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/default_image"
                     />
            </androidx.cardview.widget.CardView>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/edtThumbnailNameLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/primaryTextColor"
                app:boxBackgroundMode="outline"
                app:boxStrokeColor="@color/primaryTextColor"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="1dp"
                app:counterTextColor="@color/primaryTextColor"
                app:hintEnabled="true"
                android:layout_marginTop="4dp"
                app:hintTextColor="@color/primaryTextColor"
                app:layout_constraintTop_toBottomOf="@+id/edtThumbnailLayout"
                app:placeholderTextColor="@color/primaryTextColor"
                app:errorIconDrawable="@null"
                app:prefixTextColor="@color/primaryTextColor"
                app:startIconTint="@color/primaryTextColor"
                app:suffixTextColor="@color/primaryTextColor"
                tools:layout_editor_absoluteX="10dp">

                <EditText
                    android:id="@+id/edtThumbnailName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="top|start"
                    android:hint="@string/m_t_h_nh_nh"
                    android:inputType="textMultiLine|textCapSentences"
                    android:minLines="1"
                    android:layout_marginTop="0dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="4dp"
                    android:textColor="@color/primaryTextColor"
                    android:textCursorDrawable="@drawable/custom_cursor"
                    android:textSize="13sp"
                    android:textStyle="italic" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Danh sách nội dung"
                android:textColor="@color/primaryTextColor"
                android:textSize="17dp"
                android:layout_marginTop="15dp"
                android:textStyle="bold | italic"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edtThumbnailNameLayout"></TextView>

            <!-- Your RecyclerView -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvBodyItems"
                android:layout_width="match_parent"
                android:layout_height="0dp"

                app:layout_constraintTop_toBottomOf="@+id/textView3"
                tools:layout_editor_absoluteX="10dp" />


        </androidx.constraintlayout.widget.ConstraintLayout>


        <!-- Fixed Buttons -->

    </ScrollView>

<!--    <androidx.recyclerview.widget.RecyclerView-->
<!--        android:id="@+id/rvBodyItems"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="0dp"-->
<!--        android:paddingStart="10dp"-->
<!--        android:paddingEnd="10dp"-->
<!--        app:layout_constraintEnd_toEndOf="parent"-->
<!--        app:layout_constraintStart_toStartOf="parent"-->
<!--        app:layout_constraintTop_toBottomOf="@+id/scrollView2" />-->
    <ImageButton
        android:id="@+id/btnGoUp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="fitCenter"
        android:layout_margin="16dp"
        android:background="@drawable/btn_bg"
        android:padding="14dp"
        android:backgroundTint="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/btnAddItem"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_go_up"
        app:tint="@color/primaryTextColor"
        android:elevation="2dp"
        android:translationZ="2dp" />

    <ImageButton
        android:id="@+id/btnAddItem"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="16dp"
        android:backgroundTint="@color/white"
        android:scaleType="centerCrop"
        android:background="@drawable/btn_bg"
        android:padding="14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:elevation="2dp"
        android:translationZ="2dp"
        app:srcCompat="@drawable/ic_plus"
        app:tint="@color/primaryTextColor" />
</androidx.constraintlayout.widget.ConstraintLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/item_tittle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@id/item_image"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="30dp"
        android:layout_toStartOf="@id/item_image"
        android:text="This is a long text that will automatically wrap."
        android:textAlignment="viewStart"
        android:textSize="22sp"></TextView>

    <TextView
        android:id="@+id/item_source"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_tittle"
        android:layout_alignStart="@id/item_tittle"
        android:layout_marginStart="13dp"
        android:layout_marginTop="30dp"
        android:text="Label"
        android:textSize="16sp"></TextView>

    <ImageView
        android:id="@+id/item_image"
        android:layout_width="200dp"
        android:layout_height="120dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="15dp"
        android:scaleType="fitXY"
        android:src="@drawable/thumbnail_image"></ImageView>

    <ImageView
        android:id="@+id/item_comment"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/item_image"
        android:layout_alignStart="@id/item_source"
        android:layout_marginStart="250dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/comment_icon"></ImageView>

    <TextView
        android:id="@+id/item_comment_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/item_comment"
        android:layout_alignTop="@id/item_comment"
        android:layout_marginStart="40dp"
        android:layout_marginTop="2dp"
        android:text="34"
        android:textSize="20sp"></TextView>

    <ImageView
        android:id="@+id/item_bookmark"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignStart="@id/item_comment_count"
        android:layout_below="@id/item_image"
        android:layout_marginTop="3dp"
        android:layout_marginStart="35dp"
        android:src="@drawable/bookmark_icon"></ImageView>

</RelativeLayout>
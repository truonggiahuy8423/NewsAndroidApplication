<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/item_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="50dp"
        android:layout_toStartOf="@id/item_image"
        android:text="This is a long text that will automatically wrap."
        android:textAlignment="viewStart"
        android:textSize="22sp"></TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_label"
        android:layout_alignStart="@id/item_label"
        android:layout_marginStart="13dp"
        android:layout_marginTop="52dp"
        android:text="Label"
        android:textSize="16sp"></TextView>

    <ImageView
        android:id="@+id/item_image"
        android:layout_width="200dp"
        android:layout_height="120dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="15dp"
        android:scaleType="fitXY"
        android:src="@drawable/thumbnail_image"></ImageView>



</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/item_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="10dp"
        android:scaleType="fitXY"
        android:src="@drawable/thumbnail_image"></ImageView>

    <TextView
        android:id="@+id/item_tittle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/item_image"
        android:layout_marginStart="140dp"
        android:layout_marginTop="6dp"
        android:text="This is a long text that will automatically wrap."
        android:textAlignment="viewStart"
        android:textSize="18sp"
        android:textStyle="bold"></TextView>

    <TextView
        android:id="@+id/item_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/item_image"
        android:layout_marginStart="140dp"
        android:layout_marginTop="55dp"
        android:text="This is a long text that will automatically wrap, This is a long text that will automatically wrap,This is a long text that will automatically wrap."
        android:textAlignment="viewStart"
        android:textSize="15sp"></TextView>


</RelativeLayout>
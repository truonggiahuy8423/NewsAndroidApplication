<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txtTitle_0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Title_0"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtTitle_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Title_1"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtContent_0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Content on the top of pic" />
    <androidx.cardview.widget.CardView
        android:layout_width="200dp"
        android:layout_height="120dp"
        app:cardCornerRadius="12dp"
        android:layout_gravity="center">
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imgNews"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            tools:srcCompat="@tools:sample/backgrounds/scenic"
            />
    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/txtImgContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="HÃ¬nh"
        android:textAlignment="center"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/txtContent_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Content on the bottom of pic" />
</LinearLayout>
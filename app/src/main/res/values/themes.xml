<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.NewsAndroidProject" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="CustomButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/custom_btn_categories</item>
        <item name="android:textColor">@color/myprimary</item>
        <item name="android:textSize">10sp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="cursorColor">@color/primaryTextColor</item>
    </style>

    <style name="NavTheme" parent="Widget.Material3.BottomNavigationView.ActiveIndicator"></style>

    <style name="NavTextTheme" parent="TextAppearance.Material3.LabelMedium"></style>

    <style name="custom_indicator_style">
        <item name="itemBackground">@color/black</item>
    </style>

    <style name="Theme.NewsAndroidProject" parent="Base.Theme.NewsAndroidProject" />

    <style name="oval">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
    </style>

    <style name="Theme.NewsAndroidProject.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.NewsAndroidProject.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.NewsAndroidProject.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>
</resources>